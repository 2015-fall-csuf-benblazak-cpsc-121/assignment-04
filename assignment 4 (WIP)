// project4.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
using std::cin;
using std::cout;
using std::endl;


class List{

public:

	List();						//default constructor
	void AddNode();				//function to add new node
	void DeleteNode();			//function to delete a node
	void PrintNode();			//function to print out the value of a node




private:

	struct Node{
		int data;	//a data stored in a node
		Node * next; //use this to link from node to node
	};

	typedef struct Node * NodePtr; //define Node *  to be NodePtr so instead of typing out Node * var, we can use NodePtr var

	NodePtr node;			//This variable is used to make a new node
	NodePtr curr_node;		//This variable will link the nodes together and if needed, can be travesed thru the list 
	NodePtr head;			//Always point to the very first node and will stay there to mark the head of the list

};









int main(){

	List node;
	
	

	return 0;
}
